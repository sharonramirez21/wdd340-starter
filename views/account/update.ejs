<h1 class="update-title"><%= title %></h1>
<%- messages() %>

<div class="update-info">
    <form class="form-update" action="/account/update" method="post">
        <fieldset>
            <legend>Account Update</legend>

            <input type="hidden" name="account_id" value="<%= account_id %>">
            
            <label for="account_firstname">First Name</label>
            <input 
                type="text"
                name="account_firstname"
                id="account_firstname"
                required
                value="<%= account_firstname || '' %>"
                pattern="^[A-Za-z\s'-]{2,}$"
                title="Only letters, spaces, apostrophes and hyphens allowed"
                autocomplete="given-name"
            >

            <label for="account_lastname">Last Name</label>
            <input 
                type="text"
                name="account_lastname" 
                id="account_lastname"
                required
                value="<%= account_lastname || '' %>"
                pattern="^[A-Za-z\s'-]{2,}$"
                title="Only letters allowed"
                autocomplete="family-name"
            >

            <label for="account_email">Email</label>
            <input 
                type="email"
                name="account_email"
                id="account_email"
                required
                value="<%= account_email || '' %>"
                autocomplete="email"
                maxlength="254"
            >

            <button class="updateBTN" type="submit">Update Account</button>
        </fieldset>
    </form>

    <form class="form-update" action="/account/update-password" method="post">
        <fieldset>
            <legend>Change Password</legend>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>

            <input type="hidden" name="account_id" value="<%= account_id %>">

            <label for="account_password">New Password</label>
            <input type="password"
                name="account_password"
                id="account_password"
                required
                minlength="12"
                pattern="(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9]).{12,}"
                autocomplete="new-password"
            >
            <button class="updateBTN" type="submit">Change Password</button>
        </fieldset>
    </form>
</div>